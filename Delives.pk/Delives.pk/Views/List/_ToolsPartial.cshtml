@{
    Layout = null;
}

<div id="tools" style="display:none">
    <div class="row">
        <div class="col-md-3 col-sm-3 col-xs-6" >
            <div class="styled-select">
                <select name="sort_rating" id="sort_rating">
                    <option value="distance-asc" selected="selected" data-order-by="distance" data-sort-order="asc">Nearest results first</option>
                    <option value="distance-desc"  data-order-by="distance" data-sort-order="desc">Farther results first</option>
                    <option value="rating-asc"  data-order-by="rating" data-sort-order="asc">Lowest rating</option>
                    <option value="rating-desc"  data-order-by="rating" data-sort-order="desc">Highest rating</option>
                </select>
            </div>
        </div>
        <div class="col-md-9 col-sm-9 hidden-xs">
            <a href="grid_list.html" class="bt_filters hide"><i class="icon-th"></i></a>
        </div>
    </div>
</div>
