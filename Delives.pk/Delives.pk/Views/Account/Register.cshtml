@model Delives.pk.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<style>
    #regis-form-wrap{
        margin-bottom: 3%;
    padding: 2%;
    margin-top: 11%;
    margin-left: 16%;
    margin-right: 14%;
    background-color: #ad3638f7;
    border-radius: 12px;
    }
    label,h4{
        color:white
    }
    header{
            background-color: #ad3638a1!important;
    }

</style>
<div id="regis-form-wrap">

    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "registrationForm" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control form-white" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control form-white" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.PhoneNumber, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-white" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-white" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-white" })
            </div>
        </div>
        @*<div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>*@
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-submit" value="Register" />
                <input data-toggle="modal" data-target="#verifyPhone" class="openPhoneVerificationModal" type="hidden">
            </div>
        </div>
    }
</div>


<div class="layer"></div><!-- Mobile menu overlay mask -->
<!-- Login modal -->
@{Html.RenderPartial("~/Views/Shared/LoginModal.cshtml");}
<!-- End modal -->
<!-- Register modal -->
@{Html.RenderPartial("~/Views/Shared/VerifyPhoneModal.cshtml");}
<!-- End Register modal -->
<!-- Search Menu -->


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
