
@model List<Delives.pk.Models.OrderLocal>

@Styles.Render("~/Content/cart")

<!-- SubHeader =============================================== -->
@{Html.RenderPartial("~/Views/Cart/Confirmed/_SubHeaderPartial.cshtml");}
<!-- End SubHeader ============================================ -->

@{
    var deliveryCharges = 0;
    var grandTotal = 0;
    grandTotal += deliveryCharges;

}

<div id="position">
    <div class="container">
        <ul>
            <li><a href="#0">Home</a></li>
            <li><a href="#0">Category</a></li>
            <li>Page active</li>
        </ul>
        <a href="#0" class="search-overlay-menu-btn"><i class="icon-search-6"></i> Search</a>
    </div>
</div><!-- Position -->
<!-- Content ================================================== -->
<div class="container margin_60_35">
    <div class="row">
        <div class="col-md-offset-3 col-md-6">
            <div class="box_style_2">
                <h2 class="inner">Order confirmed!</h2>
                <div id="confirm">
                    <i class="icon_check_alt2"></i>
                    <h3>Thank you!</h3>
                    <p>
                        Lorem ipsum dolor sit amet, nostrud nominati vis ex, essent conceptam eam ad. Cu etiam comprehensam nec. Cibo delicata mei an, eum porro legere no.
                    </p>
                </div>
                @foreach (var item in Model)
                {
                    <h4>@item.OrderByName</h4>
                    <table class="table table-striped nomargin">
                        <tbody>
                            @foreach (var order in item.OrderDetails)
                            {
                                <tr>
                                    <td>
                                        <strong>@order.Quantity x</strong> @order.ItemDetail.Name
                                    </td>
                                    <td>
                                        <strong class="pull-right">Rs @order.ItemDetail.Price * @order.Quantity</strong>
                                        @{ 
                                            grandTotal += order.ItemDetail.Price;
                                        }
                                    </td>
                                </tr>
                                            }
                            <tr>
                                <td>
                                    Delivery charges
                                </td>
                                <td>
                                    <strong class="pull-right">Rs 50</strong>
                                </td>
                            </tr>

                        </tbody>
                    </table>
                }
                <br />
                <table class="table table-striped nomargin">
                    <tbody>
                        <tr>
                            <td>
                                Delivery schedule <a href="#" class="tooltip-1" data-placement="top" title="" data-original-title="Please consider 30 minutes of margin for the delivery!"><i class="icon_question_alt"></i></a>
                            </td>
                            <td>
                                <strong class="pull-right">Today 07.30 pm</strong>
                            </td>
                        </tr>
                        <tr>
                            <td class="total_confirm">
                                TOTAL
                            </td>
                            <td class="total_confirm">
                                <span class="pull-right">Rs @grandTotal</span>
                            </td>
                        </tr>
                    </tbody>
                </table>

            </div>
        </div>
    </div><!-- End row -->
</div><!-- End container -->
<!-- End Content =============================================== -->