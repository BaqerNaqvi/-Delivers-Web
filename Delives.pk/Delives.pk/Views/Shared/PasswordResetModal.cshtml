<div class="modal fade" id="passwordResetModal" tabindex="-1" role="dialog" aria-labelledby="passwordResetModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-popup">
            <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
            <form action="#" class="popup-form" id="passwordResetForm" onsubmit="return false">
                @Html.AntiForgeryToken()
                <div class="login_icon"><i class="icon_lock_alt"></i></div>
                <input id="passwordResetNewPassword" name="passwordResetNewPassword" type="password" class="form-control form-white" placeholder="New Password" maxlength="20" autocomplete="off">
                <input id="passwordResetConfirmPassword" name="passwordResetConfirmPassword" type="password" class="form-control form-white" placeholder="Confirm Password" maxlength="20" autocomplete="off">
                <input id="passwordResetCode" name="passwordResetCode" type="text" class="form-control form-white" placeholder="6-Digit Code" maxlength="20" autocomplete="off">
                <button type="submit" class="btn btn-submit">Reset Password</button>
            </form>
        </div>
    </div>
</div>
