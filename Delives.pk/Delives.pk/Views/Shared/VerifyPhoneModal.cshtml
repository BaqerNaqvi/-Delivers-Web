<div class="modal fade" id="verifyPhone" tabindex="-1" role="dialog" aria-labelledby="phoneVerificationForm" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-popup">
            <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
            <form action="#" class="popup-form" id="phoneVerificationForm" onsubmit="return false">
                @Html.AntiForgeryToken()
                <div class="login_icon"><i class="icon_lock_alt"></i></div>
                <input id="code" name="code" type="text" class="form-control form-white" placeholder="6-Digit Code" maxlength="6" autocomplete="off">
                <div class="text-left">
                    <a href="javascript:userConfig.resendCode()">Resend Code</a>
                </div>
                <button type="submit" class="btn btn-submit">Verify</button>
            </form>
        </div>
    </div>
</div>

