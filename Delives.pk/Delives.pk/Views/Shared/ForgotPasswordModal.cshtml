<div class="modal fade" id="forgotPasswordModal" tabindex="-1" role="dialog" aria-labelledby="forgotPasswordModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content modal-popup">
            <a href="#" class="close-link"><i class="icon_close_alt2"></i></a>
            <form action="#" class="popup-form" id="forgotPasswordForm" onsubmit="return false">
                @Html.AntiForgeryToken()
                <div class="login_icon"><i class="icon_lock_alt"></i></div>
                <input id="forgotPasswordPhoneNumber" name="forgotPasswordPhoneNumber" type="text" class="form-control form-white" placeholder="Phone number" maxlength="20" autocomplete="off">
                <button type="submit" class="btn btn-submit">Send Reset Code</button>
                <input data-toggle="modal" data-target="#passwordResetModal" class="openPasswordResetModal" type="hidden">
            </form>
        </div>
    </div>
</div>
